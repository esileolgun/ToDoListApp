<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightGreen"
    tools:context=".fragments.ProfileFragment"
    >

    <TextView
        android:id="@+id/txtViewHosGeldin"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Hoşgeldin GYK'lı!"
        android:textSize="20dp"
        android:background="@color/Pink"
        />

    <TextView
        android:id="@+id/txtViewFinishedTasks"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Tamamlanan Görevler"
        android:textSize="20dp"
        android:background="@color/Lightgrey"
        android:layout_below="@+id/txtViewHosGeldin"
        />
    <TextView
        android:id="@+id/txtViewWaitingTasks"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Bekleyen Görevler"
        android:textSize="20dp"
        android:background="@color/Lightgrey"
        android:layout_below="@+id/txtViewFinishedTasks"
        />

    <TextView
        android:id="@+id/tv_FinishedTask_Display"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/Lightgrey"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/txtViewFinishedTasks"
        android:layout_below="@+id/txtViewHosGeldin"/>

    <TextView
        android:id="@+id/tv_WaitingTask_Display"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/Lightgrey"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/txtViewWaitingTasks"
        android:layout_below="@+id/txtViewFinishedTasks"/>

    <Button
        android:id="@+id/button_Gorevler"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_WaitingTask_Display"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@color/green"
        android:text="Görevlerim"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"/>

</RelativeLayout>